<input type="hidden" asp-for="AnimeName" value="@Model.AnimeName" />
<input type="hidden" asp-for="SeasonNumber" value="@Model.SeasonNumber" />
<input type="hidden" asp-for="Episodes" value="@Model.Episodes" />


<div class="form-group">
    <label asp-for="SeasonTitle">Season Title</label>
    <input asp-for="SeasonTitle" required>
    <span asp-validation-for="SeasonTitle" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="SeasonImage">Image</label>
    <input asp-for="SeasonImage" required>
    <span asp-validation-for="SeasonImage" class="text-danger"></span>
</div>


    @{
        await Html.RenderPartialAsync("_CreateEpisode", Model.Episodes.ElementAt(0));
