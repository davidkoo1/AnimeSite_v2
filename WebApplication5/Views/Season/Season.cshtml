@model Season
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var anime = Model.Anime;
}
<div class="post">
    <img width: 240px; src="@Model.TitleImage" align="left" hspace="10" vspace="10">
    <p>Рейтинг</p>

    <p>
        <strong>Год выпуска:</strong>
            @Model.Date
    </p>
    <p>
        <strong>Жанры:</strong>

        <ul>
                @foreach (var genre in anime.AnimeGenres)
                {
                <li>@genre.Genre.Name</li>
                }
        </ul>

    </p>
    <p>
        <strong>Кол-во серий:</strong>
            @Model.Episodes.Count()
    </p>
    <p>
        <strong>Описание:</strong>
            @anime.Description
</div>