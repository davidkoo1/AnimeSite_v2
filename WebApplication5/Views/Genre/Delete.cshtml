<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #ff6666;
        font-size: 36px;
        margin-bottom: 10px;
        text-align: center;
    }

    /* Stylish form container */
    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Stylish form input fields */
    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    label {
        color: #666;
        font-size: 18px;
        margin-bottom: 5px;
    }

    input[type="text"],
    select {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

    /* Stylish form submit button */
    .submit-button {
        background-color: #ff6666;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .submit-button:hover {
            background-color: #ff9999;
        }

    .file-input {
        display: none;
    }

    .file-input-label {
        background-color: #ff6666;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
        display: inline-block;
    }

        .file-input-label:hover {
            background-color: #ff9999;
        }

    /* Stylish file name display */
    .file-name {
        color: #666;
        margin-top: 5px;
    }
</style>

<h1>Are you sure you want to delete this Genre?</h1>
<div class="form-container">
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <div class="form-group">
          <h1>@Model.Name</h1>
        </div>
    </form>
    <div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
        </form>
    </div>
</div>